<h4>Saved Articles</h4>

{{#each articles}}
<div class="card horizontal">
    <div class="card-image">
        <img src="{{img}}">
    </div>
    <div class="card-stacked">
        <div class="card-content">
            <span class="card-title"><a href="{{url}}" target="_blank"
                    class="red-text text-darken-4">{{title}}</a></span>
            <address>By {{author}}</address>
            <time>{{date}}</time>
            <p>{{summary}}...</p>
        </div>
        <div class="card-action">
            <a data-id="{{_id}}" class="btn btn-small red waves-effect waves-light deleteArticle"><i
                    class="material-icons">delete</i> Delete Article</a> <a data-id="{{_id}}"
                class="btn btn-small red waves-effect waves-light addNotes"><i class="material-icons">comment</i> Add
                Notes</a>
        </div>
    </div>
</div>
{{else}}
<div class="card horizontal">
    <div class="card-stacked">
        <div class="card-content">
            <p class="text-center">No saved articles found. Please try <a href="/">browsing articles</a>.</p>
        </div>
    </div>
</div>
{{/each}}

<div id="articleNotes" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4 id="articleTitle"></h4>
        <h5>Notes:</h5>
        <ul class="collection">
        </ul>
        <br>
        <div class="input-field">
            <textarea id="txtNotes" class="materialize-textarea" data-length="120"></textarea>
            <label for="txtNotes">New Notes</label>
        </div>
    </div>
    <div class="modal-footer">
        <a id="saveNotes" class="waves-effect waves-red btn red">Add Note</a>
        <a class="modal-close waves-effect waves-red btn red">Close</a>
    </div>
</div>